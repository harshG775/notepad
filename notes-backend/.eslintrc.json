{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "indent": [
            "warn",
            4
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}